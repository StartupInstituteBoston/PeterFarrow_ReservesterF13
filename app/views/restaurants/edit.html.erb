<%= form_for :restaurant, url: restaurant_path(@restaurant), method: :patch do |f|  %>
  <p>
    <%= f.label :name %>
    <br />
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :address %>
    <br />
    <%= f.text_area :address %>
  </p>

  <p>
    <%= f.label :phone %>
    <br />
    <%= f.text_field :phone %>
  </p>

  <%= f.submit %>
<% end %>
