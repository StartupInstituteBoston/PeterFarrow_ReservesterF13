<%= form_for(@restaurant, html: {:multipart => true}) do |f| %>

  <% if @restaurant.errors.any? %>
    <div id="error_explanation">
      <p><strong>
        <%= pluralize(@restaurant.errors.count, "error") %> prohibited this post from being saved:
        <ul>
          <% @restaurant.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </strong></p>
    </div>
  <% end %>

  <p> 
    <%= f.label :name %>
    <br />
    <%= f.text_field :name %>
  </p>
  <p> 
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </p>
  <p> 
    <%= f.label :address %>
    <br />
    <%= f.text_area :address %>
  </p>
  <p>
    <%= f.label :phone %>
    <br />
    <%= f.text_field :phone %>
  </p>
  <p>
    <%= f.label 'Upload New Image' %>
    <br />
    <%= f.file_field :restaurantimage %>
    <br />
    <%= f.label 'Current Image' %>
    <%= image_tag @restaurant.restaurantimage_url(:masthead).to_s %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
